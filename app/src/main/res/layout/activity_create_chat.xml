<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="dismiss"
    tools:context=".ui.chat.CreateChatActivity">

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/dialog_background"
        android:elevation="@dimen/elv_floating_action_button"
        android:orientation="vertical"
        android:padding="32dp"
        android:paddingTop="48dp"
        android:clipChildren="false"
        android:transitionName="@string/transition_name_create_chat">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <ImageView
                android:src="@drawable/ic_menu_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  채팅방 제목 설정  "
                style="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>

        <!--<android.support.design.widget.TextInputLayout
            android:id="@+id/username_float_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>-->

        <Button
            android:id="@+id/btn_find"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:theme="@style/PrimaryButton"/>

    </LinearLayout>







</FrameLayout>

